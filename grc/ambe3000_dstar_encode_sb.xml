<?xml version="1.0"?>
<block>
  <name>dstar_encode_sb</name>
  <key>ambe3000_dstar_encode_sb</key>
  <category>ambe3000</category>
  <import>import ambe3000</import>
  <make>ambe3000.dstar_encode_sb($device, $baudrate)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>device</name>
    <key>device</key>
    <value>/dev/ttyUSB0</value>
    <type>string</type>
  </param>
  <param>
    <name>baudrate</name>
    <key>baudrate</key>
    <value>230400</value>
    <type>int</type>
    <option><name>230400</name><key>230400</key></option>
    <option><name>460800</name><key>460800</key></option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>short</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
